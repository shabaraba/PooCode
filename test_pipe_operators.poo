// test_pipe_operators.poo - パイプ演算子のテスト

// 関数定義
def double() : int -> int {
    🍕 * 2 >> 💩
}

def is_even() : int -> bool {
    🍕 % 2 == 0 >> 💩
}

// 配列を作成
[1..5] >> numbers;

// マップ演算子を使って各要素を2倍にする
"元の配列:" |> print;
numbers |> print;

"mapで2倍にした結果 (+> 演算子):" |> print;
numbers +> double |> print;

"filterで偶数のみをフィルタ (?> 演算子):" |> print;
numbers ?> is_even |> print;
